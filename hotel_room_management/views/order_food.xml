                    <!--                    </group>-->
                <sheet>


                    <div class="d-flex">
                        <div class="flex-grow-0 pr-5">
                            <field name="image" widget="image"
                                   class="o_lunch_image"
                                   options="{'image_preview': 'image'}"
                                   />
                        </div>
                        <div class="flex-grow-1 pr-5">
                            <h2>
                                <field name="name"
                                       options="{'no_create_edit': True}"
                                       />
                            </h2>
                            <h3 class="pt-3">
                                <field name="price"
                                       options="{'no_create_edit': True}"
                                      />
                            </h3>
                        </div>
                    </div>
                    <div class="o_lunch_wizard">
                        <group>
                        <div class="row">
                            <div class="col-2">
                                <label for="name" string="Quantity"
                                       class="font-weight-bold"/>
                            </div>
                            <div class="col-10">
                                <field name="quantity_id"/>

                            </div>
                        </div>
                        </group>
                        <group>
                        <div class="row">
                            <div class="col-2">
                                <label for="name" string="Category"
                                       class="font-weight-bold"/>
                            </div>
                            <div class="col-10">
                                <field name="category_ides" />

                            </div>
                        </div>
                        <div class="row">
                        <div class="col-2">
                            <label for="descriptions" class="font-weight-bold"/>
                        </div>
                        <div class="col-10">
                            <field name="descriptions" />
                        </div>
                    </div>

                   <div class="row">
                            <div class="col-2">
                                <label for="name" string="Unit of Measure"
                                       class="font-weight-bold"/>
                            </div>
                            <div class="col-10">
                                <field name="uom_id" />

                            </div>
                        </div>
                    </group>
                    </div>




                </sheet>
                <footer>
                    <button string="Add to List" name="action_add_to_list"
                            type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="order_action" model="ir.actions.act_window">
        <field name="name">Order Food</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.order</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_content_smiling_face">
                create a new order!
            </p>
        </field>
    </record>
    <record id="food_action" model="ir.actions.act_window">
        <field name="name">Food</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.item</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_content_smiling_face">
                create a new food!
            </p>
        </field>
    </record>

    <menuitem id="order_food"
              name="Order Food"
              parent="hotel_menu_root"
              action="order_action"
              sequence="10"/>
    <menuitem id="food_action" active="False"
              name="Food"
              parent="configuration_menu"
              action="food_action"
              sequence="10"/>

</odoo>



