    <record id="order_tree" model="ir.ui.view">
        <field name="name">hotel.order.tree</field>
        <field name="model">hotel.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="room_id"></field>
                <field name="gust"></field>
                <field name="order_time"></field>

            </tree>

        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">hotel.order.form</field>
        <field name="model">hotel.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="room_id"></field>
                            <field name="gust"></field>


                        </group>
                        <group>

                            <field name="order_time"></field>

                        </group>
                    </group>
                    <notebook>
                        <page string="Menu" name="menu">
                            <field name="category_ide" widget="many2many_tags"/>
                            <field name="item_ide" mode="kanban"  >
                                <kanban create="1" edit="0"
                                        class="o_kanban_mobile">

                                    <field name="image" class="oe_avatar"
                                           widget="image"/>
                                    <field name="name"></field>
                                    <field name="category_ides"
                                           widget="many2many_tags"/>
                                    <field name="price"></field>
                                    <field name="id"></field>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" />
                                            <div class = " oe_kanban_global_click">
                                                <div class="o_kanban_image d-md-block">
                                                    <img alt="item image"  t-att-src="kanban_image('hotel.item', 'image', record.id.raw_value)"/>

                                                </div>
                                                <div class="oe_kanban_details">
                                                    <div class="float-right">
                                                        <field name="price"/>
                                                    </div>
                                                    <strong>
                                                    <field name="name"/>
                                                    </strong>
                                                    <div t-if="record.category_ides.raw_value"><field name="category_ides"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>


                        </page>
                        <page string="Order List" name="order_list">
                            <field name="order_list_ide">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </tree>

                            </field>

                        </page>
                    </notebook>



                </sheet>

            </form>


        </field>
    </record>


